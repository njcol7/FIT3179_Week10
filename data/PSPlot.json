{ "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 1080,
  "height" : 720,
  "projection": {
      "type": "equalEarth"
  },
  "layer": [{
      "data": {
          "url": "https://raw.githubusercontent.com/njcol7/FIT3179/main/ne_110m.json",
          "format": {
              "type":"topojson",
              "feature":"ne_110m_admin_0_countries"
          }
      },
      "mark": {
          "type":"geoshape",
          "fill":"lightgray",
          "stroke":"white"
      }
  },
  {
    "data": {
      "url" : "https://raw.githubusercontent.com/njcol7/FIT3179/main/gtaa.csv"
    },
    "transform": [{
      "filter": {
        "selection" : "TypeSelector"
        }
    },
    {
      "groupby": ["country_txt"],
      "aggregate": [{"op": "count", "field": "eventid", "as": "total" }]
    },
    {
      "lookup":"country_txt",
      "from":{
        "data":{
          "url": "https://raw.githubusercontent.com/albertyw/avenews/master/old/data/average-latitude-longitude-countries.csv"
        },
        "key":"Country",
        "fields": ["Latitude", "Longitude"]
      }
    },
    {
      "filter" : "datum.Longitude != null"
    }],
    "selection":{
      "TypeSelector":{
            "type" : "single",
            "fields": ["attacktype1_txt"],
            "bind": {"input": "select", "options": [null, "Assassination", "Hostage Taking (Kidnapping)", "Bombing/Explosion", "Facility/Infrastructure Attack", "Armed Assault", "Hijacking", "Unknown"]}
      }
    },
    "mark": "circle",
    "encoding": {
      "latitude":{
        "field" : "Latitude"
      },
      "longitude":{
        "field" : "Longitude"
      },
      "size": {
        "field": "total",
        "type":"quantitative",
        "scale": {
          "type": "log"
        }
      },
      "color" :{
        "field": "total",
        "type":"quantitative",
        "scale" : {
          "scheme" : "reds"
        }
      },
      "tooltip" : [{
          "title" : "Country",
          "field" : "country_txt"
      },
      {
          "title" : "Number of Attacks",
          "field" : "total"
      }]
    }
  }]
}
